<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.AlertsControlsPage"
             Title="ToastsControlsPage">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label
                Text="Toasts examples"
                Style="{StaticResource Headline}" />

        <Button
                Text="Toast message" 
                Clicked="ShowToastMessage_Clicked"
                HorizontalOptions="Fill" />

        <Button
                Text="SnackBar message" 
                Clicked="ShowSnackBar_Clicked"
                HorizontalOptions="Fill" />

        <Button
                Text="Display Alert" 
                Clicked="DisplayAlert_Clicked"
                HorizontalOptions="Fill" />

        <Button
                Text="yes or no Alert" 
                Clicked="YesOrNoDisplayAlert_Clicked"
                HorizontalOptions="Fill" />

    </VerticalStackLayout>
    
</ContentPage>